<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/etiqueta"
            android:textSize="24sp"/>
    <Button
            android:text="Down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/down" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/etiqueta" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.146"/>
    <Button
            android:text="Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/up" app:layout_constraintStart_toEndOf="@+id/down"
            android:layout_marginStart="140dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/etiqueta"/>
    <Button
            android:text="Generate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/generate" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/down" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"/>

</android.support.constraint.ConstraintLayout>